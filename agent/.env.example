# Environment variables for Node.js agent
NODE_ENV=production
PORT=3000
HOST=localhost

# Work directory for created repositories
WORK_DIR=./workspace

# Jetsite script path (auto-detected)
JETSITE_SCRIPT=../fork_template_repo_v2.ps1

# GitHub configuration
GITHUB_TOKEN=your_github_token_here

# Security
API_KEY=your-secret-api-key-change-this

# Task processing
POLL_INTERVAL=*/30 * * * * *
MAX_CONCURRENT_TASKS=3

# VS Code integration
AUTO_OPEN_VSCODE=true

# External queue (optional)
# QUEUE_URL=https://your-queue-service.com/api/tasks

# Logging
LOG_LEVEL=info
LOG_FILE=agent.log
